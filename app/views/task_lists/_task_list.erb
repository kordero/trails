<tr class="spacer_row">
  <td></td>
</tr>
<%= render :partial=>"task_lists/header", :object=>task_list %>
<tr>
  <td colspan="8">
    <%= render :partial=>"tasks/edit", :object=>task_list.tasks.build %>
  </td>
</tr>
<tr>
  <td colspan="8" style="padding: 0px">
    <ul class="list_container" id="task_list_container_<%= task_list.id %>">
      <%= render :partial=>task_list.sorted_tasks %>
    </ul>
  </td>
</tr>
<tr class="total" id="total_<%= task_list.id %>">
  <td class="external"></td>
  <td colspan="4"></td>
  <td class="earnings" id="task_list_earnings_<%= task_list.id %>">
    <%= task_list.earnings.format(:no_cents_if_whole => true, :symbol => "$") %>
  </td>
  <td class="duration" id="task_list_duration_<%= task_list.id %>">
    <%= raw formatted_duration(task_list.duration) %>
  </td>
</tr>
<%= render :partial=>"task_lists/footer" %>
